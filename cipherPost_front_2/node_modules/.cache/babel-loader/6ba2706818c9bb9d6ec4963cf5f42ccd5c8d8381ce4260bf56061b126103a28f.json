drop {\n    top: 0;\n    position: fixed;\n    background: rgba(0,0,0,0.6);\n    width: 100%;\n    height: 100%;\n}\n\n.composer {\n    width: 40%;\n    padding: 20px;\n    margin: 100px auto;\n    background: #d6edfa;\n    height: 50%;\n    border-radius: 10px;\n}\n.composer .message_attributes{\n    width: 100%;\n    margin-bottom: 5px;\n    border: none;\n    border-bottom: 1px solid rgba(146, 146, 146, 0.8);\n    background: none;\n}\n\n.composer .message{\n    width:100%;\n    height: 87%;\n    margin-top: 15px;\n    margin-bottom: 10px;\n    text-align: left;\n    background: none;\n    border: none;\n    border-bottom: 1px solid rgba(146, 146, 146, 0.8);\n    border-left: 1px solid rgba(146, 146, 146, 0.8);\n    resize: none;\n    overflow-y: auto;\n}\n</style>"],"mappings":"AAWA,eAAe;EACXA,IAAIA,CAAA,EAAE;IACF,OAAM;MACFC,IAAI,EAAE;IACV;EACJ,CAAC;EACDC,OAAO,EAAE;IACLC,KAAKA,CAAA,EAAE;MACH,IAAI,CAACC,KAAK,CAAC,gBAAgB,CAAC;IAChC,CAAC;IACDC,SAASA,CAACC,KAAK,EAAC;MACZ,MAAMC,QAAO,GAAID,KAAK,CAACE,MAAM;MAC7B,MAAMC,KAAI,GAAIF,QAAQ,CAACG,cAAc;MACrC,MAAMC,GAAE,GAAIJ,QAAQ,CAACK,YAAY;MAEjC,IAAI,CAACX,IAAG,GAAI,IAAI,CAACA,IAAI,CAACY,SAAS,CAAC,CAAC,EAAEJ,KAAK,IAAI,IAAG,GAAI,IAAI,CAACR,IAAI,CAACY,SAAS,CAACF,GAAG,CAAC;;MAEjF;MACAJ,QAAQ,CAACO,iBAAiB,CAACL,KAAI,GAAI,CAAC,EAAEA,KAAI,GAAI,CAAC,CAAC;IAC9C;EACJ;AACJ"},"metadata":{},"sourceType":"module","externalDependencies":[]}